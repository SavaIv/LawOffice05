@using LawOffice05.Core.Models.Seniors
@model BecomeSeniorViewModel

@{
    ViewData["Title"] = "Add Senior Page";
}

<div calss="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@ViewBag.Title</h2>
            
            <form method="post">     
                <br />
                <div class="mb-3">
                    <label asp-for="Position" class="form-label "></label>
                    <select asp-for="Position" class="form-select">
                        <option value="" selected disabled>choose your Position Type here...</option>
                        <option value="Manager">Manager</option>
                        <option value="dept Manager">dept Manager</option>                                             
                    </select>
                    <span asp-validation-for="Position" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>