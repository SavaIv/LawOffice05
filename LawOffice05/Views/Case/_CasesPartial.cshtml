@using LawOffice05.Core.Services.Cases
@model IEnumerable<CaseServiceModel>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>InsideCaseNumber</th>
            <th>InsideCaseName</th>
            <th>ClientName</th>
            <th>CaseDescription</th>
            <th>Take Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var theCase in Model)
        {
            <tr>
                <td>@theCase.InsideCaseNumber</td>
                <td>@theCase.InsideCaseName</td>
                <td>@theCase.ClientFamiliName</td>
                <td>@theCase.CaseDescription</td>
                <td>
                    <a asp-action="ClientInfo" asp-controller="case" asp-route-id="@theCase.CaseId" class="btn btn-block btn-outline-info btn-xs">Client info</a>
                    @if (ViewBag.AllowCaseEdit == true)
                    {
                        <a asp-action="Edit" asp-controller="case" asp-route-caseid="@theCase.CaseId" class="btn btn-block btn-outline-info btn-xs">Edit</a>
                        <a asp-action="Delete" asp-controller="case" asp-route-id="@theCase.CaseId" class="btn btn-block btn-outline-info btn-xs">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>